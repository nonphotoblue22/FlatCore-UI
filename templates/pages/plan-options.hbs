<body class="{{ page-class }}">

{{> log-in-navbar }}

<div class="container" id="container">
	<h6 class="demo-panel-title">Get 50% off your first account</h6>
	<div class="row">
		<div class="col-xs-12">
			<form id="sign-up-options" action="" method="post">
				<div class="row option-row">
					<label class="share-label" for="six-months">6 months - $2.99 / mo</label>
					<input data-toggle="switch" checked type="radio" name="purchase-plan" value="six-months">
				</div>
				<div class="row option-row">
					<label class="share-label" for="three-months">3 months - $3.99 / mo</label>
					<input data-toggle="switch" type="radio" name="purchase-plan" value="three-months">
				</div>
				<div class="row option-row">
					<label class="share-label" for="single-month">1 months - $4.99 / mo</label>
					<input data-toggle="switch" type="radio" name="purchase-plan" value="single-month">
				</div>
				<div class="row option-row">
					<label class="share-label" for="free-trial">Free Trial</label>
					<input data-toggle="switch" type="radio" name="purchase-plan" value="free-trial">
				</div>
			</form>
		</div>
	</div> <!-- /row -->
	<div class="row" id="sign-in-row">
		<div class="col-xs-6 col-xs-offset-3">
			<a href="#fakelink" class="btn btn-lg center-block btn-inverse">Get Started</a>
		</div>
	</div> <!-- /row -->
</div>
<script src="assets/js/flat-ui.js"></script>
<script>
	// Switches
	var options = {
		animate: true,
		inverse: true,
		onColor: 'payment',
		offColor: 'greyscale',
		onText: "&#10003;",
		offText: " "

		//disabled: true
	};

	if ($('[data-toggle="switch"]').length) {
		$('[data-toggle="switch"]').bootstrapSwitch(options);
	}
</script>
